{% extends 'security/baseSecurity.html.twig' %}

{% block title %}Check email
{% endblock %}
{% block body %}
	<div class="flex flex-col justify-center items-center max-w-lg">
		<img src="/images/logo.svg" class="w-24 md:h-auto mb-8" alt="logo"/>
		<h1 class="text-2xl uppercase font-bold text-center max-w-md mb-8">{% trans %}pages.forgot.title{% endtrans %}</h1>
		<p class="text-md text-center text-gray-500 max-w-md mb-6">{% trans %}pages.forgot.informations{% endtrans %}</p>
		{{form_start(form,{'attr': {'class': 'flex flex-col content-center justify-center items-center'}})}}
		{{form_widget(form.email,{'attr':{'class':'border shadow-inner py-2 px-3 text-gray-700 w-80 focus:shadow-outline mb-3'}})}}
		{{ form_errors(form) }}
		<button type="submit" class="bg-black text-white text-sm w-80 pt-2 pb-2 mb-3" type="submit">{% trans %}pages.forgot.button_send{% endtrans %}</button>
		{{form_end(form)}}
		<p class="text-gray-500 text-sm">{% trans %}pages.forgot.span{% endtrans %}
			<a class="text-gray-600 text-sm underline" href="{{ path('app_login') }}">{% trans %}pages.forgot.connexion{% endtrans %}</a>
		</p>
	</div>
{%  endblock %}
