{% extends 'security/baseSecurity.html.twig' %}

{% block title %}Change Password
{% endblock %}
{% block body %}
	<div class="flex flex-col justify-center items-center max-w-lg">
		<img src="/images/logo.svg" class="w-24 md:h-auto mb-8" alt="logo"/>
		<h1 class="text-2xl uppercase font-bold text-center max-w-md mb-8">Reinitialisez votre mot de passe</h1>
		<p class="text-md text-center text-gray-500 max-w-md mb-6">Saisissez votre nouveau mot de passe.
		</p>
		{{form_start(form,{'attr': {'class': 'flex flex-col content-center justify-center items-center'}})}}
		{{ form_errors(form.plainPassword.first) }}
		{{form_widget(form.plainPassword.first,{'attr':{'class':'border shadow-inner py-2 px-3 text-gray-700 w-80 focus:shadow-outline mb-3'}})}}
		{{form_widget(form.plainPassword.second,{'attr':{'class':'border shadow-inner py-2 px-3 text-gray-700 w-80 focus:shadow-outline mb-3'}})}}
		<button type="submit" class="bg-black text-white text-sm w-80 pt-2 pb-2 mb-3" type="submit">Valider.</button>
		{{form_end(form)}}
	</div>

{%  endblock %}
