{% extends 'security/baseSecurity.html.twig' %}

{% block title %}Register
{% endblock %}
{% block body %}
	<div class="flex flex-col justify-center items-center max-w-lg">
		<img src="/images/logo.svg" class="w-24 md:h-auto mb-8" alt="logo"/>
		<h1 class="text-2xl uppercase font-bold text-center max-w-md mb-8">{% trans %}pages.register.title{% endtrans %}</h1>
		{{form_start(form,{'attr': {'class': 'flex flex-col content-center justify-center items-center'}})}}
		{{form_widget(form.plainPassword.first,{'attr':{'class':'border shadow-inner py-2 px-3 text-gray-700 w-80 focus:shadow-outline mb-3'}})}}
		<span class=" w-80 text-red-500 text-sm px-1 mb-3" id="error-password">{{ form_errors(form.plainPassword.first) }}</span>
	</div>
{% endblock %}
