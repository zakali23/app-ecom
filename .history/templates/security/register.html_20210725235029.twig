{% extends 'security/baseSecurity.html.twig' %}

{% block title %}Register
{% endblock %}
{% block body %}
	{# form new user #}
	{{form_start(form,{'attr': {'class': 'w-full max-w-md'}})}}
	{# Logo #}
	<div class="flex flex-wrap  mb-2 ">
		<div class="w-full px-3 flex justify-center items-center">
			<img src="/images/logo.svg" class="w-24 md:h-auto mb-4" alt="logo"/>
		</div>
	</div>
	{# form title #}
	<div class="flex flex-wrap  mb-3 ">
		<div class="w-full px-3 flex justify-center items-center">
			<h1 class="text-2xl uppercase font-bold text-center max-w-md mb-4">{% trans %}pages.register.title{% endtrans %}</h1>
		</div>
	</div>
	{# form informations #}
	<div class="flex flex-wrap  mb-3 ">
		<div class="w-full px-3 flex justify-center items-center">
			<p class="text-md text-center text-gray-500 max-w mb-6">{% trans %}pages.register.informations{% endtrans %}
			</p>
		</div>
	</div>
	{# form input #}
	<div class="flex flex-wrap 3">
		<div class="w-full px-3">
			{{form_widget(form.email,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.email) }}</p>
		</div>
	</div>

	<div class="flex flex-wrap  ">
		<div class="w-full px-3">
			{{form_widget(form.password.first,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.password.first) }}</p>
		</div>
	</div>

	<div class="flex flex-wrap  ">
		<div class="w-full px-3">
			{{form_widget(form.password.second,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.password.second) }}</p>
		</div>
	</div>

	<div class="flex flex-wrap  ">
		<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
			{{form_widget(form.firstName,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.firstName) }}</p>
		</div>
		<div class="w-full md:w-1/2 px-3">
			{{form_widget(form.lastName,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.lastName) }}</p>
		</div>
	</div>

	<div class="flex flex-wrap">
		<div class="w-full px-3">
			{{form_widget(form.birthday,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.birthday) }}</p>
		</div>
	</div>
	<div class="flex flex-wrap ">
		<div class="w-full px-3 flex justify-center items-center">
			<p class="text-md text-center text-gray-500 max-w mb-6">{% trans %}pages.register.birthday{% endtrans %}
			</p>
		</div>
	</div>
	<div class="flex flex-wrap">
		<div class="w-full px-3">
			{{form_widget(form.phone,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.phone) }}</p>
		</div>
	</div>
	<div class="flex justify-end w-full px-8">
		<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewbox="0 0 20 20" fill="currentColor">
			<path d="M14.414 7l3.293-3.293a1 1 0 00-1.414-1.414L13 5.586V4a1 1 0 10-2 0v4.003a.996.996 0 00.617.921A.997.997 0 0012 9h4a1 1 0 100-2h-1.586z"/>
			<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
		</svg>
	</div>


	<div class="flex flex-wrap">
		<div class="w-full px-3">
			{{form_widget(form.address,{'attr':{'class':'border shadow-inner py-3 px-4 text-gray-700 block w-full focus:shadow-outline mb-3'}})}}
			<p class="text-red-500 text-xs italic">{{ form_errors(form.address) }}</p>
		</div>
	</div>
	<div class="flex flex-wrap -mx-3 mb-2">
		<div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
				City
			</label>
			<input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-city" type="text" placeholder="Albuquerque">
		</div>
		<div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-state">
				State
			</label>
			<div class="relative">
				<select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-state">
					<option>New Mexico</option>
					<option>Missouri</option>
					<option>Texas</option>
				</select>
				<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
					<svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
				</div>
			</div>
		</div>
		<div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-zip">
				Zip
			</label>
			<input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-zip" type="text" placeholder="90210">
		</div>
	</div>
	{{form_end(form)}}
{% endblock %}
